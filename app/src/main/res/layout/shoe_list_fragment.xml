<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shoelistViewModel"
            type="com.udacity.shoestore.ShoeListViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/ShoeListLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShoeListFragment">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoeEntry1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shoe #1, Size 0"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/shoeEntry2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shoe #2, Size 0"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/shoeEntry3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shoe #3, Size 0"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/shoeEntry4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shoe #4, Size 0"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/shoeEntry5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shoe #5, Size 0"
                    android:textSize="34sp" />

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewShoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:contentDescription="content_description_addShoe"
            android:src="@drawable/ic_add"
            app:backgroundTint="#66BB6A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>